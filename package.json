{
  "name": "lg-coffee",
  "version": "1.0.0",
  "description": "coffee menu styled web app for business transactions.",
  "main": "index.js",
  "workspaces": [
    "packages/*",
    "packages/lg-calc"
  ],
  "scripts": {    
    "build:packages": "lerna run build --no-private",    
    "publish:packages": "lerna publish",
    "prettier": "prettier --config .prettierrc --write \"**/*.{js,jsx}\"",
    "lint:fix": "eslint --fix \"**/*.{js,jsx}\"",
    "lint:js": "eslint  --cache \"**/*.{js,jsx}\"",
    "lint": "npm run lint:fix && npm run lint:js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hi-matbub/lg-coffee.git"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hi-matbub/lg-coffee/issues"
  },
  "homepage": "https://github.com/hi-matbub/lg-coffee#readme",
  "dependencies": {
    "@next/mdx": "^10.0.2",
    "@sendgrid/mail": "^7.4.0",
    "@testing-library/jest-dom": "^5.11.6",
    "stripe": "^8.125.0"
  },
  "devDependencies": {
    "@testing-library/react": "^11.1.1",
    "@types/react": "^16.9.55",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "eslint": "^7.12.1",
    "eslint-config-airbnb": "^18.2.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.3.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^26.6.3",
    "jest-transformer-mdx": "^2.2.0",
    "lerna": "^3.22.1",
    "lerna-changelog": "^1.0.1",
    "lint-staged": "^10.5.1",
    "prettier": "^2.1.2",
    "prettier-eslint": "^11.0.0",
    "react-test-renderer": "^17.0.1",
    "typescript": "^4.0.5"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "npm run prettier",
      "npm run lint"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "changelog": {
    "repo": "hi-matbub/lg-coffee",
    "labels": {
      "tag: new feature": ":rocket: New Feature",
      "tag: breaking change": ":boom: Breaking Change",
      "tag: bug fix": ":bug: Bug Fix",
      "tag: polish": ":nail_care: Polish",
      "tag: documentation": ":memo: Documentation",
      "tag: internal": ":house: Internal",
      "tag: performance": ":running_woman: Performance"
    }
  },
  "cacheDir": ".changelog"
}
